            android:key="topic1"
            android:summary="Topic for button 1"
            android:title="Button 1 topic" />
        <EditTextPreference
            android:key="code1on"
            android:summary="Code for button 1"
            android:title="Button 1 on code"
            android:inputType="numberDecimal" />
        <EditTextPreference
            android:key="code1off"
            android:summary="Code for button 1"
            android:title="Button 1 off code"
