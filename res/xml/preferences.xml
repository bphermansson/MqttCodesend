<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:summary="Settings"
    android:title="settings"
    android:layout_height="200px"
    android:layout_width="200px"
    >
    <EditTextPreference
        android:key="mqttip"
        android:summary="IP for the Mqtt broker"
        android:title="Mqtt broker IP" />
    <EditTextPreference
        android:key="mqttuser"
        android:summary="Username for the Mqtt broker"
        android:title="Mqtt broker username" />
